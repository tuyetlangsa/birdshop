        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Birdshop"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.CategoryManagementActivity"
            android:exported="false" />
        <activity
            android:name=".ui.BrandManagementActivity"
            android:exported="false" />
        <activity
            android:name=".ui.product.ProductDetailManageActivity"
            android:exported="false" />
        <activity
            android:name=".ui.order.OrderDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.order.OrderHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.product.UpdateProductActivity"
            android:exported="false" />
        <activity
            android:name=".ui.product.AddProductActivity"
            android:exported="false" />
        <activity
            android:name=".ui.product.ProductManagementActivity"
            android:exported="false" />
        <activity
            android:name=".activity.AdminActivity"
            android:exported="false" />
        <activity
            android:name=".ui.payment.ConfirmPaymentActivity"
            android:exported="false" />
