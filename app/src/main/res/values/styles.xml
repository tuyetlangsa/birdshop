<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- RatingBar style -->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlActivated">#FFD700</item>
        <item name="colorControlNormal">#E0E0E0</item>
    </style>

    <!-- Circle ImageView style -->
    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Circle ShapeAppearance for ShapeableImageView -->
    <style name="CircleImageViewAppearance" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- BottomSheet Theme -->
    <style name="BottomSheetTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
    </style>

    <!-- Rounded Input Layout -->
    <style name="RoundedInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/RoundedInputShape</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">3dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextAppearance">@style/RoundedInputHint</item>
    </style>

    <style name="RoundedInputShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="RoundedInputHint">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RoundedInputText">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="RoundedMultiLineInputText">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">top|start</item>
    </style>

    <style name="LabelText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#111111</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="Theme.OnlyFanshop">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
