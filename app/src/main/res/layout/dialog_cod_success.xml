<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white">

    <!-- Header Background -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:layout_marginStart="-20dp"
        android:layout_marginEnd="-20dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:background="#E8F5E9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <!-- Success Icon with Animation -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="35dp"
                app:cardElevation="0dp"
                android:background="#C8E6C9">

                <ImageView
                    android:id="@+id/ivSuccessIcon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_cod_success"
                    android:padding="15dp"
                    android:contentDescription="Success Icon" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✓ Đặt hàng thành công!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp" />

    <!-- Message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đơn hàng COD đã được tạo thành công"
        android:textSize="15sp"
        android:textColor="#666666"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="6dp"
        android:gravity="center" />

    <!-- Order ID -->
    <TextView
        android:id="@+id/tvOrderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#12345"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FF9800"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp" />

    <!-- Additional Info -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bạn sẽ nhận được thông báo khi đơn hàng được xử lý"
        android:textSize="13sp"
        android:textColor="#999999"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="8dp" />

    <!-- Buttons -->
    <Button
        android:id="@+id/btnViewOrder"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Xem đơn hàng"
        android:textColor="@color/white"
        android:backgroundTint="#FF9800"
        style="@style/Widget.Material3.Button"
        android:elevation="2dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Đóng"
        android:textColor="#666666"
        android:background="@drawable/bg_button_outline"
        style="@style/Widget.Material3.Button.OutlinedButton" />

</LinearLayout>

