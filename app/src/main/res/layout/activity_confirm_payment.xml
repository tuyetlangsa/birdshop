<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="#111111"
            app:title="Thanh toán"
            app:titleTextColor="#111111"
            app:contentInsetStartWithNavigation="0dp">


        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="200dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Customer Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin khách hàng"
                        android:textColor="#111111"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Username -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#F5F5F5"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_person"
                            android:layout_marginEnd="12dp"
                            app:tint="#666666" />

                        <TextView
                            android:id="@+id/tvUsername"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Username"
                            android:textColor="#111111"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#F5F5F5"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_email"
                            android:layout_marginEnd="12dp"
                            app:tint="#666666" />

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="email@example.com"
                            android:textColor="#111111"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Phone Number (Optional) -->
                    <LinearLayout
                        android:id="@+id/layoutPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#F5F5F5"
                        android:padding="12dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_call"
                            android:layout_marginEnd="12dp"
                            app:tint="#666666" />

                        <TextView
                            android:id="@+id/tvPhoneNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0123456789"
                            android:textColor="#111111"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Delivery Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin nhận hàng"
                        android:textColor="#111111"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Delivery Type Tabs -->

                    <!-- Note: Tabs will be added programmatically in Java code -->

                    <!-- Store Pickup Section -->
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabDeliveryType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:tabGravity="fill"
                        app:tabIndicatorColor="#DC2626"
                        app:tabIndicatorHeight="2dp"
                        app:tabMode="fixed"
                        app:tabSelectedTextColor="#DC2626"
                        app:tabTextColor="#666666" />

                    <LinearLayout
                        android:id="@+id/layoutStorePickup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginTop="16dp">

                        <!-- Tỉnh/Thành phố -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tỉnh/Thành phố"
                            style="@style/LabelText" />
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:endIconMode="dropdown_menu"
                            app:hintEnabled="false"
                            style="@style/RoundedInputLayout">
                            <AutoCompleteTextView
                                android:id="@+id/spinnerStoreProvince"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                style="@style/RoundedInputText" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Quận/Huyện -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quận/Huyện"
                            style="@style/LabelText" />
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:endIconMode="dropdown_menu"
                            app:hintEnabled="false"
                            style="@style/RoundedInputLayout">
                            <AutoCompleteTextView
                                android:id="@+id/spinnerStoreDistrict"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                style="@style/RoundedInputText" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Cửa hàng -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cửa hàng"
                            style="@style/LabelText" />
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:endIconMode="dropdown_menu"
                            app:hintEnabled="false"
                            style="@style/RoundedInputLayout">
                            <AutoCompleteTextView
                                android:id="@+id/spinnerStore"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                style="@style/RoundedInputText" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Ghi chú khác (nếu có) -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ghi chú khác (nếu có)"
                            style="@style/LabelText" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:hintEnabled="false"
                            style="@style/RoundedInputLayout">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtStoreNote"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:hint="Nhập ghi chú"
                                android:inputType="textMultiLine"
                                android:gravity="top|start"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp"
                                style="@style/RoundedMultiLineInputText" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <!-- Home Delivery Section -->
                    <LinearLayout
                        android:id="@+id/layoutHomeDelivery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginTop="16dp">

                        <!-- Thông tin người nhận -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thông tin người nhận"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#111111"
                            android:layout_marginBottom="12dp" />

                        <!-- Họ và tên -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Họ và tên"
                            style="@style/LabelText" />
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:endIconMode="clear_text"
                            app:hintEnabled="false"
                            style="@style/RoundedInputLayout">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtRecipientName"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                style="@style/RoundedInputText" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Số điện thoại -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Số điện thoại"
                            style="@style/LabelText" />
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:endIconMode="clear_text"
                            app:hintEnabled="false"
                            style="@style/RoundedInputLayout">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtRecipientPhone"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:inputType="phone"
                                style="@style/RoundedInputText" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Địa chỉ nhận hàng -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Địa chỉ nhận hàng"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#111111"
                            android:layout_marginBottom="12dp" />

                        <!-- Địa chỉ mặc định checkbox or display -->
                        <LinearLayout
                            android:id="@+id/layoutDefaultAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:background="#F5F5F5"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:id="@+id/tvDefaultAddress"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Địa chỉ mặc định của khách hàng"
                                android:textSize="15sp"
                                android:textColor="#111111" />

                        </LinearLayout>

                        <!-- Text nhập địa chỉ mới -->
                        <TextView
                            android:id="@+id/tvEnterNewAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nhập địa chỉ mới"
                            android:textSize="15sp"
                            android:textColor="#1976D2"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginBottom="12dp" />

                        <!-- Form nhập địa chỉ mới (hidden by default) -->
                        <LinearLayout
                            android:id="@+id/layoutNewAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <!-- Tỉnh/Thành phố -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tỉnh/Thành phố"
                                style="@style/LabelText" />
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                app:endIconMode="dropdown_menu"
                                app:hintEnabled="false"
                                style="@style/RoundedInputLayout">
                                <AutoCompleteTextView
                                    android:id="@+id/spinnerHomeProvince"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    style="@style/RoundedInputText" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <!-- Quận/Huyện -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quận/Huyện"
                                style="@style/LabelText" />
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                app:endIconMode="dropdown_menu"
                                app:hintEnabled="false"
                                style="@style/RoundedInputLayout">
                                <AutoCompleteTextView
                                    android:id="@+id/spinnerHomeDistrict"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    style="@style/RoundedInputText" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <!-- Địa chỉ nhà -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Địa chỉ nhà"
                                style="@style/LabelText" />
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                app:endIconMode="clear_text"
                                app:hintEnabled="false"
                                style="@style/RoundedInputLayout">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtHomeStreet"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    style="@style/RoundedInputText" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <!-- Ghi chú khác (nếu có) -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ghi chú khác (nếu có)"
                            style="@style/LabelText" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:hintEnabled="false"
                            style="@style/RoundedInputLayout">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtHomeNote"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:hint="Nhập ghi chú"
                                android:inputType="textMultiLine"
                                android:gravity="top|start"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp"
                                style="@style/RoundedMultiLineInputText" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Payment Method Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phương thức thanh toán"
                        android:textColor="#111111"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <RadioGroup
                        android:id="@+id/radioPayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- COD Option -->
                        <RadioButton
                            android:id="@+id/radioBtnCOD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="COD (Thanh toán khi nhận hàng)"
                            android:textSize="16sp"
                            android:textColor="#111111"
                            android:textStyle="bold"
                            android:checked="false"
                            android:drawableStart="@drawable/ic_cash"
                            android:drawablePadding="8dp"
                            android:drawableTint="#FF9800"
                            android:padding="16dp"
                            android:layout_marginBottom="8dp"
                            android:background="?attr/selectableItemBackground"
                            android:backgroundTint="#FFF3E0" />

                        <!-- VNPay Option -->
                        <RadioButton
                            android:id="@+id/radioBtnVnPay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="VNPay"
                            android:textSize="16sp"
                            android:textColor="#111111"
                            android:textStyle="bold"
                            android:checked="false"
                            android:drawableStart="@drawable/ic_credit_card"
                            android:drawablePadding="8dp"
                            android:drawableTint="#1976D2"
                            android:padding="16dp"
                            android:background="?attr/selectableItemBackground"
                            android:backgroundTint="#E3F2FD" />

                    </RadioGroup>

                    <!-- COD Description -->
                    <TextView
                        android:id="@+id/tvCODDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thanh toán bằng tiền mặt khi nhận hàng, kiểm tra hàng trước khi thanh toán"
                        android:textSize="13sp"
                        android:textColor="#666666"
                        android:layout_marginStart="48dp"
                        android:layout_marginTop="4dp"
                        android:visibility="gone" />

                    <!-- VNPay Description -->
                    <TextView
                        android:id="@+id/tvVNPayDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thanh toán qua VNPay (ATM, Visa, Mastercard)"
                        android:textSize="13sp"
                        android:textColor="#666666"
                        android:layout_marginStart="48dp"
                        android:layout_marginTop="4dp"
                        android:visibility="gone" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Order Summary Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tóm tắt đơn hàng"
                        android:textColor="#111111"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Cart Items RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcl_view_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginBottom="16dp" />

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E5E5E5"
                        android:layout_marginBottom="16dp" />

                    <!-- Subtotal -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tạm tính"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tvSubtotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 VND"
                            android:textSize="14sp"
                            android:textColor="#111111" />
                    </LinearLayout>

                    <!-- Shipping -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Phí vận chuyển"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Miễn phí"
                            android:textSize="14sp"
                            android:textColor="#198754" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E5E5E5"
                        android:layout_marginBottom="16dp" />

                    <!-- Total -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tổng cộng"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#111111" />

                        <TextView
                            android:id="@+id/totalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 VND"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1976D2" />
                    </LinearLayout>

                    <!-- Error Message -->
                    <TextView
                        android:id="@+id/tvError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#DC3545"
                        android:textSize="14sp"
                        android:background="#FEF2F2"
                        android:padding="12dp"
                        android:visibility="gone"
                        android:layout_marginTop="16dp" />

                    <!-- Terms Text -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bằng cách thanh toán, bạn đồng ý với Điều khoản sử dụng và Chính sách bảo mật"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:layout_marginTop="16dp"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Payment Bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomPaymentBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Payment Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/checkoutBtn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Thanh toán"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#1976D2"
                app:cornerRadius="12dp"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
