<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="600dp"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:clipToPadding="false"
    android:paddingTop="0dp"
    android:fitsSystemWindows="false"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="0dp"
        android:background="@color/white">

        <!-- Header with rounded top -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="16dp"
            android:background="@color/white"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bộ lọc"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:letterSpacing="0.01" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnResetFilter"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Đặt lại"
                    android:textSize="14sp"
                    android:textColor="#2196F3"
                    android:textAllCaps="false"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginEnd="4dp"
                    app:cornerRadius="20dp"
                    app:rippleColor="#1A2196F3" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCloseFilter"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:icon="@android:drawable/ic_menu_close_clear_cancel"
                    app:iconTint="#666666"
                    app:iconSize="20dp"
                    app:cornerRadius="20dp"
                    app:strokeWidth="0dp"
                    android:contentDescription="Close"
                    app:backgroundTint="#F5F5F5" />
            </LinearLayout>
        </LinearLayout>

        <!-- Content Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <!-- Price Range Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E8E8E8"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Khoảng giá"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#E0E0E0"
                            app:cardBackgroundColor="#FAFAFA">

                            <TextView
                                android:id="@+id/tvPriceMin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0₫"
                                android:textSize="14sp"
                                android:textColor="#2196F3"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:padding="14dp" />
                        </com.google.android.material.card.MaterialCardView>

                        <View
                            android:layout_width="16dp"
                            android:layout_height="2dp"
                            android:layout_marginHorizontal="12dp"
                            android:background="#BDBDBD" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#E0E0E0"
                            app:cardBackgroundColor="#FAFAFA">

                            <TextView
                                android:id="@+id/tvPriceMax"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="120.000.000₫"
                                android:textSize="14sp"
                                android:textColor="#2196F3"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:padding="14dp" />
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <com.google.android.material.slider.RangeSlider
                        android:id="@+id/rangeSliderPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:valueFrom="0"
                        android:valueTo="195000000"
                        android:stepSize="100000"
                        app:thumbColor="#2196F3"
                        app:trackColorActive="#2196F3"
                        app:trackColorInactive="#E0E0E0"
                        app:trackHeight="4dp"
                        app:thumbRadius="10dp"
                        app:labelBehavior="gone"
                        app:haloColor="#1A2196F3" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Sort by Price Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E8E8E8"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sắp xếp theo giá"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="12dp" />

                    <RadioGroup
                        android:id="@+id/rgPriceSort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbPriceNone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mặc định"
                            android:textSize="15sp"
                            android:textColor="#424242"
                            android:checked="true"
                            android:paddingVertical="10dp"
                            app:buttonTint="#2196F3" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbPriceLow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Giá: Thấp đến Cao"
                            android:textSize="15sp"
                            android:textColor="#424242"
                            android:paddingVertical="10dp"
                            app:buttonTint="#2196F3" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbPriceHigh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Giá: Cao đến Thấp"
                            android:textSize="15sp"
                            android:textColor="#424242"
                            android:paddingVertical="10dp"
                            app:buttonTint="#2196F3" />
                    </RadioGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Brand Filter Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E8E8E8"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nhãn hàng"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="12dp" />

                    <Spinner
                        android:id="@+id/spinnerFilterBrand"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/stroke_bg"
                        android:padding="12dp"
                        android:popupBackground="@color/white" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Category Filter Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E8E8E8"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loại quạt"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="12dp" />

                    <Spinner
                        android:id="@+id/spinnerFilterCategory"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/stroke_bg"
                        android:padding="12dp"
                        android:popupBackground="@color/white" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Apply Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnApplyFilter"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Áp dụng bộ lọc"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:letterSpacing="0.02"
                app:cornerRadius="16dp"
                app:backgroundTint="#2196F3"
                app:elevation="2dp"
                app:iconGravity="textStart"
                app:rippleColor="#FFFFFF" />

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>