<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvAddProductTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm Sản Phẩm"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Ảnh sản phẩm -->
        <ImageView
            android:id="@+id/imgPreview"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginBottom="8dp" />

        <!-- Nút chọn ảnh -->
        <Button
            android:id="@+id/btnChooseImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn Ảnh"
            android:layout_marginBottom="8dp" />

        <!-- Nút upload ảnh -->


        <!-- Tên sản phẩm -->
        <EditText
            android:id="@+id/edtProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên sản phẩm"
            android:inputType="textPersonName"
            android:layout_marginBottom="12dp" />

        <!-- Mô tả ngắn -->
        <EditText
            android:id="@+id/edtBriefDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả ngắn"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:layout_marginBottom="12dp" />

        <!-- Mô tả đầy đủ -->
        <EditText
            android:id="@+id/edtFullDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả chi tiết"
            android:inputType="textMultiLine"
            android:minLines="4"
            android:layout_marginBottom="12dp" />

        <!-- Thông số kỹ thuật -->
        <EditText
            android:id="@+id/edtTechSpecs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Thông số kỹ thuật"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:layout_marginBottom="12dp" />

        <!-- Giá -->
        <EditText
            android:id="@+id/edtPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá"
            android:inputType="numberDecimal"
            android:layout_marginBottom="12dp" />

        <!-- Spinner danh mục -->
        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <!-- Spinner thương hiệu -->
        <Spinner
            android:id="@+id/spinnerBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- Nút Submit -->
        <Button
            android:id="@+id/btnSubmitProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm sản phẩm"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
