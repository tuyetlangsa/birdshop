<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <ImageView
        android:src="@drawable/icons8_success"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="Success" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanh toán thành công!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cảm ơn bạn đã mua hàng tại Bird Shop."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp" />
    <Button
        android:id="@+id/btnViewOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xem đơn hàng"
        android:layout_marginTop="32dp"
        style="@style/Widget.Material3.Button" />
    <Button
        android:id="@+id/btnGoHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Về trang chủ"
        android:layout_marginTop="20dp"
        style="@style/Widget.Material3.Button" />
</LinearLayout>
